# Sketchee MVP - Environment Configuration Template
# Copy this file to .env and add your actual API keys

# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Goose Integration
GOOSE_API_ENDPOINT=http://localhost:8000/api/generate-sketch
GOOSE_API_TIMEOUT=15000

# Development Settings
NODE_ENV=development
PORT=3001
DEBUG_MODE=true

# Voice Recognition Settings
SPEECH_LANGUAGE=en-US
SPEECH_TIMEOUT=10000

# Canvas Settings
CANVAS_WIDTH=800
CANVAS_HEIGHT=600
MAX_SHAPES=50

# Performance Limits
MAX_ANIMATION_SPEED=5
MAX_CODE_LINES=50
PROCESSING_TIMEOUT=15000

# Server Configuration
SERVER_PORT=3001
CLIENT_ORIGIN=http://localhost:8080

# Security
ENABLE_HTTPS=false
TRUST_PROXY=loopback
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000  # 24 hours in ms

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# CORS
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Timeouts (in ms)
API_TIMEOUT=30000
SOCKET_TIMEOUT=60000

# Cache
ENABLE_CACHE=true
CACHE_TTL=3600000  # 1 hour

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics